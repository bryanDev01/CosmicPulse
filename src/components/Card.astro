---
import type { NSAData } from "../types/types";

interface Props {
  data: NSAData;
}

const { data } = Astro.props;
---
<div class="bg-slate-900/50 text-white rounded-lg shadow-lg w-3/5 h-fit">
  <div class="w-full h-[400px] object-contain overflow-hidden">
    <img
      src={data.url}
      alt={data.explanation}
      class="w-full h-full rounded-t-lg mb-4 hover:scale-110 transition-all"
    />
  </div>
  <div class=" py-3 flex flex-col gap-1.5 p-4">
    <h2 class="text-xl font-bold mb-2">{data.title}</h2>
    <p class="text-lg text-pretty">
      {data.explanation}
    </p>
  </div>
</div>
